<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/background_color"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="2" >

        <com.refeved.monitor.ui.CustomImageView
            android:id="@+id/imageViewVersion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:background="@drawable/rounded_editview"
            android:src="@drawable/wk03" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageViewVersion"
            android:layout_marginTop="20dp"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="right"
                android:paddingRight="10dp"
                android:text="@string/textview_version_num"
                android:textSize="20sp"
                android:textColor="@color/gray" />

            <TextView
                android:id="@+id/TextViewVersionNumber"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:layout_weight="1" 
                android:gravity="left"
                android:paddingLeft="10dp"
                android:textSize="20sp"
                android:hint="V1.0"
                android:textColor="@color/gray"/>
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="2"
        android:orientation="vertical" >

            <Button
                android:id="@+id/buttonVersionUpdate"
                android:layout_width="240dp"
                android:layout_height="35dp"
                android:layout_alignLeft="@+id/buttonVersionInfo"
                android:layout_alignParentTop="true"
                android:layout_marginTop="20dp"
                android:background="@drawable/color_button"
                android:shadowColor="@color/blue"
                android:shadowDx="0"
                android:shadowDy="1"
                android:shadowRadius="1"
                android:text="@string/button_check_update"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/buttonVersionInfo"
                android:layout_width="240dp"
                android:layout_height="35dp"
                android:layout_below="@+id/buttonVersionUpdate"
                android:layout_centerHorizontal="true"
                android:background="@drawable/color_button"
                android:shadowColor="@color/blue"
                android:shadowDx="0"
                android:shadowDy="1"
                android:shadowRadius="1"
                android:text="@string/button_version_info"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold" />

    </RelativeLayout>

</LinearLayout>